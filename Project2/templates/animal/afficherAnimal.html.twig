{% extends 'base.html.twig' %}

{% block title %}Affichage de l'animal{% endblock %}
{% block monTitre %}Voici l'animal : {{ animal.nom }}{% endblock %}
{% block body %}
    <div class = "row align-items-center">
        <div class ="col-2 text-center">
            <img src ="{{ asset('images/'~animal.image) }}">
        </div>
        <div class="col-auto">
            <div>Description : {{ animal.description }} </div>
            <div>Poids : {{ animal.poids }}</div>
            <div>Dangereux    :
                {% if animal.dangereux %}
                    <span class="badge badge-danger">OUI</span>
                {% else %}
                    <span class="badge badge-success">NON</span>
                {% endif %}
             </div>
            <div>
                <h4>Famille :</h4>            <a href="{{ path('afficher_famille',{'id':animal.famille.id})  }}" class="btn btn-primary">{{ animal.famille.libelle }}</a>
            </div>
            <div>
                <h4>Continents :</h4>
            {% for conti in animal.continents %}
                    <a href="{{path('afficher_continent',{'id':conti.id}) }}" class="btn btn-warning">
                        {{ conti.libelle }}
                    </a>
            {% endfor %}
            </div>
            <div>
                <h4>Personnes :</h4>
                {% for dispose in animal.disposes %}
                    <a href="{{path('afficher_personne',{'id':dispose.personne.id}) }}" class="btn btn-info">
                        {{ dispose.personne.nom }}
                    </a>
                {% endfor %}
            </div>

        </div>
    </div>


{% endblock %}
