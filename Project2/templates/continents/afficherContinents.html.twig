{% extends 'base.html.twig' %}

{% block title %}Affichage du Continent{% endblock %}
{% block monTitre %}Voici le continent {{ continent.libelle }}{% endblock %}
{% block body %}
    <div class="row">
    {%  for animal in continent.Animaux %}
            <div class="col-6">
                <div class="row align-items-center">
                    <div class="col-12 cold-md-6 col-lg-2 text-center">
                        <img src="{{ asset('images/'~animal.image)}}" class="img-fluid">
                    </div>
                    <div class="col text-center">
                        <h2><a href="{{ path('afficher_animal',{'id':animal.id }) }}">{{ animal.nom }}</a></h2>
                        <div><h4>{{ animal.description }}</h4></div>
                        <div><a href ="{{ path('afficher_famille',{'id':animal.famille.id}) }}" class = "btn btn-primary">{{ animal.famille.libelle }}</a></div>
                        <div><h4>Voici les autres continents où l'animal est présent</h4>
                            {% for conti in animal.continents %}
                                {% if conti.id != continent.id %}
                                    <a href="{{path('afficher_continent',{'id':conti.id}) }}" class="btn btn-warning">
                                        {{ conti.libelle }}
                                    </a>
                                {% endif %}
                            {% endfor %}
                    </div>
                </div>

                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
