{% extends 'base.html.twig' %}

{% block title %}Gamos de la concession{% endblock %}
{% block monTitre %}Listes des voitures{% endblock %}

{% block body %}
    {{form_start(form)}}
    <div class="row no-gutters align-items-center text-center">
        <div class="col">
            {{form_row(form.minAnnee)}}
        </div>
        <div class="col">
            {{form_row(form.maxAnnee)}}
        </div>
        <div class="col-2">
            <input type="submit" value="rechercher" class="btn btn-primary">
        </div>
    </div>

    {{form_end(form)}}
    <a href="" class="d-block btn btn-success">Ajouter</a>
    {%  for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row no-gutters">
        {% for voiture in voitures %}
            <div class="col-12 col-lg-6 p-1">
                <div class="card mb-3">
                    <div class="row no-gutters align-items-center p-2">
                        <div class="col-12 col-md-4">
                            <img src="{{asset('images/modeles/' ~ voiture.modele.image)}}" class="card-img">
                        </div>
                        <div class="col">
                            <div class="card-body">
                                <h5 class="card-title">{{voiture.immatriculation}}</h5>
                                <p class="card-text">
                                <div>Marque : {{voiture.modele.marque.libelle}}</div>
                                <div>Modele : {{voiture.modele.libelle}} - PM : {{voiture.modele.prixMoyen}}</div>
                                <div>Nombre de porte : {{voiture.nbPortes}}</div>
                                <div>Ann√©e : {{voiture.annee}}</div>
                                </p>
                            </div>
                        </div>
                    </div>
                    {% if admin %}
                    <div class="row no-gutters">
                            <a href="{{ path("modifVoiture",{'id':voiture.id} ) }}" class="col btn btn-warning">Modifier</a>

                            <a href="" class="col btn btn-danger">Supprimer</a>
                    </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>



    <div class="pagination">
        {{ knp_pagination_render(voitures) }}
    </div>


{% endblock %}
