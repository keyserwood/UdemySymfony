{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{%  block monTitre %}
Connexion
{% endblock %}
{% block body %}
{% if error %}
    <div class="m-2 alert alert-danger">
        {{ error.messageKey | trans(error.messagedata,'security') }}
    </div>

{% endif %}
<form action="{{ path("connexion") }}" method="post">
    <div class="m-2 form-group">
        <label>
            Login :
        </label>
        <input type ="text" required name ="_username" class="form-control">
    </div>
    <div class="m-2 form-group">
        <label>
            Password :
        </label>
        <input type ="password" required name ="_password" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary", value="Indentification">
</form>


{% endblock %}
