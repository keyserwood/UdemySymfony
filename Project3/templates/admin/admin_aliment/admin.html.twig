{% extends 'base.html.twig' %}

{% block title %}Aliments{% endblock %}
{% block monTitreAdmin %}Administration des aliments
{% endblock %}
{% block body %}
    <a href="" class="btn btn-success m-2">Ajouter</a>
    <table class="table m-2">
        <tr class="table-dark">
        <th>Image</th>
        <th>Aliments</th>
        <th>Prix</th>
        <th>Calories</th>
        <th>Proteines</th>
        <th>GLucides</th>
        <th>Lipides</th>
        <th>Actions</th>
        </tr>
            {% for aliment in aliments %}
        <tr>
            <td> <img src="{{asset('images/'~aliment.image)}}"  class="perso_imgAliment" ></td>
            <td> {{ aliment.nom }} </td>
            <td> {{ aliment.prix}}</td>
            <td>{{ aliment.calorie }}</td>
            <td>{{ aliment.proteine }}</td>
            <td>{{ aliment.glucide }}</td>
            <td>{{ aliment.lipide }}</td>
            <td>
                <a href="{{ path('admin_aliment_modification',{'id' : aliment.id}) }}" class="btn btn-primary">
                    Modifier
                </a>
                <a href="" class="btn btn-danger">
                    Supprimer
                </a>
            </td>
        </tr>

        {% endfor %}
    </table>
{% endblock %}
