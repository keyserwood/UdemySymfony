{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}

{% block monTitre %}
    {% if isModification %}
        Modification {{type.libelle}}
    {% else %}
        Ajout d'un aliment
    {% endif %}
{% endblock %}
{% block body %}
    {{form_start(form)}}
    <div class="row">
        <div class="col-6">
            {% if isModification %}
                <img src="{{asset('images/types/' ~ type.image )}}" style="width:25%">
            {% endif %}
            <div>{{ form_row(form.image)}}</div>
            <div>{{ form_row(form.libelle, {"attr" : {'class':'text-danger bg-success'},"label":"Nom de l'aliment"})}}</div>

        </div>
        <div class="col-6">
            {{form_widget(form)}}
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Enregistrer">
    {{form_end(form)}}

{% endblock %}
